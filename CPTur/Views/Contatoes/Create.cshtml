@model CPTur.Models.Contato

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3 mb-3">Contato ou Orçamento</h1>

    <p>Envie sua mensagem que entraremos em contato em breve. </p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assunto" for="exampleFormControlSelect1">Assunto</label>
                <select asp-for="Assunto" class="form-control" id="exampleFormControlSelect1">
                    <option>Selecione</option>
                    <option>Contato</option>
                    <option>Orçamento</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QtPessoas" for="exampleFormControlSelect1">Selecione a quantidade de pessoas</label>
                <select asp-for="QtPessoas" class="form-control" id="exampleFormControlSelect1">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Destino" for="exampleFormControlSelect1">Selecione o Destino</label>
                <select asp-for="Destino" class="form-control" id="exampleFormControlSelect1">
                    <option>Nenhum</option>
                    <option>Moscou</option>
                    <option>Zurique</option>
                    <option>Santa Cruz de Tenerife</option>
                    <option>Siracusa</option>
                    <option>Jalapão</option>
                    <option>Gramado</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="Mensagem" class="control-label"></label>
                <input asp-for="Mensagem" class="form-control" />
                <span asp-validation-for="Mensagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-light" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
