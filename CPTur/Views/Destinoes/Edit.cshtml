@model CPTur.Models.Destino

@{
    ViewData["Title"] = "Edit";
}

<h1>Alterar informações do Destino</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tipo" for="exampleFormControlSelect1">Selecione o tipo</label>
                <select asp-for="Tipo" class="form-control" id="exampleFormControlSelect1">
                    <option asp-for="Tipo">Nacional</option>
                    <option asp-for="Tipo">Internacional</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Clima" for="exampleFormControlSelect1">Selecione o clima</label>
                <select asp-for="Clima" class="form-control" id="exampleFormControlSelect1">
                    <option asp-for="Clima">Frio</option>
                    <option asp-for="Clima">Quente</option>

                </select>
            </div>

           
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-light" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
